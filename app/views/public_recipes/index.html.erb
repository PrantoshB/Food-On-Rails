<h2>Public Recipes</h2>

<ul>
  <% @public_recipes.each do |recipe| %>
    <li class="row">
      <div>
        <h3><%= recipe.name %></h3>
        <p>by: <%= recipe.user.name %></p>
      </div>
      <div>
        <h3>Total food: <%= 3 %></h3>
        <p>Total price: <%= 250 %>$</p>
      </div>
    </li>
  <% end %>
</ul>