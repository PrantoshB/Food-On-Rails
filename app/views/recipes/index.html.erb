<a href="/recipes/new">
  <button>Add New Recipe</button>
</a>
<% @recipes.each do |recipe| %>
  <div>
    <a href=" recipes/<%=recipe.id %>">
      <h4> <%= recipe.name %></h4>
      <% if can? :destroy , recipe %>
        <%= button_to "Remove", recipe, method: :delete, class: 'remove-recipe-link' %>
      <% end %>
      <p><%= recipe.description %></p>
    </a>
  </div>
<% end %>